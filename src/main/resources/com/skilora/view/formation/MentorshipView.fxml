<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import com.skilora.framework.components.TLButton?>

<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.skilora.formation.controller.MentorshipController"
            fitToWidth="true" style="-fx-background-color: transparent;">
    <VBox spacing="24" style="-fx-background-color: transparent;">
        <padding>
            <Insets top="32" right="32" bottom="32" left="32"/>
        </padding>

        <HBox spacing="16" alignment="CENTER_LEFT">
            <Label fx:id="titleLabel" text="Mentorat" styleClass="h2"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TLButton fx:id="requestBtn" text="Demander un Mentor" variant="PRIMARY" onAction="#handleRequest"/>
        </HBox>
        
        <VBox fx:id="contentPane" spacing="12" VBox.vgrow="ALWAYS"/>
    </VBox>
</ScrollPane>
