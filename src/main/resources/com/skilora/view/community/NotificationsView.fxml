<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import com.skilora.framework.components.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.skilora.community.controller.NotificationsController"
      spacing="24"
      style="-fx-background-color: transparent;">
    <padding><Insets top="32" right="32" bottom="32" left="32"/></padding>
    
    <!-- Header -->
    <HBox spacing="24" alignment="CENTER_LEFT">
        <VBox spacing="4">
            <Label text="Notifications" styleClass="h2"/>
            <Label fx:id="statsLabel" text="0 non lues" styleClass="text-muted"/>
        </VBox>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <HBox spacing="12">
            <TLButton fx:id="markAllBtn" text="Tout marquer lu" variant="OUTLINE" onAction="#handleMarkAllRead"/>
            <TLButton fx:id="clearBtn" text="Effacer tout" variant="GHOST" onAction="#handleClearAll"/>
        </HBox>
    </HBox>
    
    <!-- Tabs -->
    <HBox fx:id="tabsBox" spacing="8">
        <ToggleButton text="Toutes" styleClass="tab-button" selected="true" onAction="#handleShowAll"/>
        <ToggleButton text="Non lues" styleClass="tab-button" onAction="#handleShowUnread"/>
        <ToggleButton text="Mentions" styleClass="tab-button" onAction="#handleShowMentions"/>
    </HBox>
    
    <!-- Notifications List -->
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
        <VBox fx:id="notificationsList" spacing="12">
            <padding><Insets top="0" right="8" bottom="0" left="0"/></padding>
        </VBox>
    </ScrollPane>
</VBox>
