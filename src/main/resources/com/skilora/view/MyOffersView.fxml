<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import com.skilora.framework.components.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.skilora.recruitment.controller.MyOffersController"
      spacing="24"
      style="-fx-background-color: transparent;">
    <padding><Insets top="32" right="32" bottom="32" left="32"/></padding>

    <!-- Header -->
    <HBox spacing="16" alignment="CENTER_LEFT">
        <VBox spacing="4">
            <Label text="Mes Offres d'Emploi" styleClass="h2"/>
            <Label fx:id="statsLabel" text="Chargement..." styleClass="text-muted"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <TLButton fx:id="newOfferBtn" text="+ Nouvelle Offre" variant="DEFAULT" onAction="#handleNewOffer"/>
        <TLButton fx:id="refreshBtn" text="Actualiser" variant="OUTLINE" onAction="#handleRefresh"/>
    </HBox>

    <!-- Filter Tabs -->
    <HBox fx:id="filterBox" spacing="8" alignment="CENTER_LEFT"/>

    <!-- Search -->
    <TLTextField fx:id="searchField" promptText="Rechercher une offre..." prefWidth="400"/>

    <!-- Offers List -->
    <VBox fx:id="offersContainer" spacing="12"/>

    <!-- Empty State -->
    <VBox fx:id="emptyState" spacing="12" alignment="CENTER" visible="false" managed="false"
          style="-fx-padding: 48;">
        <Label text="Aucune offre publiÃ©e" styleClass="h3"/>
        <Label text="Commencez par crÃ©er votre premiÃ¨re offre d'emploi." styleClass="text-muted"/>
        <TLButton text="Publier une Offre" variant="DEFAULT" onAction="#handleNewOffer"/>
    </VBox>
</VBox>

