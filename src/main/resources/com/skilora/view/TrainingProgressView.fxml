<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import com.skilora.framework.components.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.skilora.controller.formation.TrainingProgressController"
      spacing="24"
      style="-fx-background-color: transparent;">
    
    <padding><Insets top="32" right="32" bottom="32" left="32"/></padding>

    <!-- Header -->
    <VBox spacing="8">
        <Label text="Mes Formations" styleClass="h2"/>
        <Label text="Suivez votre progression dans toutes vos formations" styleClass="text-muted"/>
    </VBox>

    <!-- Stats Cards -->
    <HBox spacing="16">
        <TLCard HBox.hgrow="ALWAYS">
            <VBox spacing="8" style="-fx-padding: 20;">
                <Label fx:id="totalEnrollmentsLabel" text="0" styleClass="h1"/>
                <Label text="Formations inscrites" styleClass="text-muted"/>
            </VBox>
        </TLCard>
        <TLCard HBox.hgrow="ALWAYS">
            <VBox spacing="8" style="-fx-padding: 20;">
                <Label fx:id="completedLabel" text="0" styleClass="h1"/>
                <Label text="Formations complétées" styleClass="text-muted"/>
            </VBox>
        </TLCard>
        <TLCard HBox.hgrow="ALWAYS">
            <VBox spacing="8" style="-fx-padding: 20;">
                <Label fx:id="inProgressLabel" text="0" styleClass="h1"/>
                <Label text="En cours" styleClass="text-muted"/>
            </VBox>
        </TLCard>
    </HBox>

    <!-- Training Cards -->
    <VBox fx:id="trainingsContainer" spacing="16" VBox.vgrow="ALWAYS">
        <!-- Training cards will be added here -->
    </VBox>

    <!-- Empty State -->
    <VBox fx:id="emptyState" spacing="12" alignment="CENTER" visible="false" managed="false"
          style="-fx-padding: 48;">
        <Label text="Aucune formation inscrite" styleClass="h3"/>
        <Label text="Explorez nos formations pour commencer votre apprentissage." styleClass="text-muted"/>
    </VBox>

</VBox>
