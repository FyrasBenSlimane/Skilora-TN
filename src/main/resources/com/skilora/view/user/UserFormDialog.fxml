<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import com.skilora.framework.components.*?>
<?import com.skilora.framework.components.TLSeparator?>

<VBox xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.skilora.user.controller.UserFormController"
      spacing="16">

    <!-- Account Information Section -->
    <VBox spacing="12">
        <Label text="Information Compte" styleClass="h4"/>
        <TLSeparator/>
        
        <TLTextField fx:id="usernameField" label="Nom d'utilisateur" 
                     promptText="jdoe"/>
        
        <TLTextField fx:id="fullNameField" label="Nom Complet" 
                     promptText="John Doe"/>
        
        <TLTextField fx:id="emailField" label="Email" 
                     promptText="user@example.com"/>
    </VBox>

    <!-- Security & Role Section -->
    <VBox spacing="12">
        <Label text="Sécurité &amp; Rôle" styleClass="h4"/>
        <TLSeparator/>
        
        <TLPasswordField fx:id="passwordField" label="Mot de passe" 
                         promptText="******"/>
        
        <TLSelect fx:id="roleSelect" label="Rôle"/>
    </VBox>

</VBox>
