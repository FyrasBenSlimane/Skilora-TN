<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import com.skilora.framework.components.TLButton?>
<?import com.skilora.framework.components.TLTextField?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.skilora.controller.recruitment.MyOffersController"
      styleClass="page-container" spacing="16">
    <padding><Insets top="24" right="24" bottom="24" left="24"/></padding>
    <HBox spacing="12" alignment="CENTER_LEFT">
        <Label fx:id="statsLabel" styleClass="text-muted"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TLButton fx:id="newOfferBtn" text="Nouvelle offre" onAction="#handleNewOffer"/>
        <TLButton fx:id="refreshBtn"  text="Actualiser"    onAction="#handleRefresh"/>
    </HBox>
    <HBox fx:id="filterBox" spacing="8"/>
    <HBox spacing="8" alignment="CENTER_LEFT">
        <TLTextField fx:id="searchField" promptText="Rechercher..." prefWidth="240"/>
    </HBox>
    <VBox fx:id="offersContainer" spacing="12" VBox.vgrow="ALWAYS"/>
    <VBox fx:id="emptyState" visible="false" managed="false" spacing="8" alignment="CENTER">
        <Label text="Aucune offre" styleClass="form-title"/>
        <Label text="Publiez votre premiÃ¨re offre" styleClass="text-muted"/>
    </VBox>
</VBox>
