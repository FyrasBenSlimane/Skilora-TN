<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="cardRoot" styleClass="ticket-card" prefWidth="280.0" stylesheets="@/tn/esprit/skylora/style/modern_style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.skylora.controllers.TicketCardController">
    <children>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label fx:id="priorityBadge" styleClass="badge" text="HIGH" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="statusBadge" styleClass="badge" text="OPEN" />
        </HBox>
        <Label fx:id="subjectLabel" styleClass="ticket-subject" text="Sujet du ticket" wrapText="true" />
        <Label fx:id="categoryLabel" styleClass="ticket-meta" text="Catégorie: TECHNIQUE" />
        <Label fx:id="dateLabel" styleClass="ticket-meta" text="Créé le: 12/02/2026" />
        <Region VBox.vgrow="ALWAYS" />
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button onAction="#handleEdit" text="Editer" style="-fx-background-color: transparent; -fx-text-fill: #1E40AF; -fx-padding: 5 0 5 0;" />
            <Button onAction="#handleDelete" text="Supprimer" style="-fx-background-color: transparent; -fx-text-fill: #EF4444; -fx-padding: 5 0 5 0;" />
            <Button onAction="#handleView" styleClass="btn-success" text="Voir Détails" />
        </HBox>
    </children>
</VBox>
